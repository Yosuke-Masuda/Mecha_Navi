<div class="card jumbotron bg-light mx-auto">
  <h2 class="text-center">ジャンル管理</h2>
	<div class="mb-3">
	  <h3 class="col-sm-5 mx-auto mb-3">新規登録</h3>
	  <%= render 'shared/genre_form', genre: @genre, url: company_genres_path(current_company.id, @genre) %>
	</div>
    <div class="mb-3">
		  <h3 class="col-sm-10 mx-auto">ジャンル一覧</h3>
		  <div class="table-responsive">
			  <table class="table col-sm-10 mx-auto">
			    <thead class="thead-light">
				  <tr>
				    <th>ジャンル名</th>
					<th>状態</th>
					<th></th>
				  </tr>
				</thead>
				<tbody>
		          <% @genres.each do |genre| %>
				    <tr>
					  <td><%= genre.name %></td>
					  <td>
					    <% if genre.is_active? %>
						  <p class="text-success">有効</p>
						<% else %>
						  <p class="text-secondary">無効</p>
						<% end %>
					  </td>
					  <td class="text-center"><%= link_to "編集", edit_company_genre_path(current_company.id, genre), class: "btn btn-outline-success col-sm-3" %></td>
					</tr>
				  <% end %>
				</tbody>
			  </table>
		  </div>
    </div>
	<%= render partial: 'shared/pagination', locals: { items: @genres } %>
  </div>
