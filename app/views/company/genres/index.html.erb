<div class="card jumbotron bg-light mx-auto">
  <h3 class="text-center mb-3">ジャンル管理</h3>
	<h4 class="col-sm-5 mx-auto mb-3">新規登録</h4>
	<%= render 'shared/genre_form', genre: @genre, url: company_genres_path(current_company.id, @genre) %>
  <div class="mb-3">
	  <h4 class="col-sm-10 mx-auto mb-3">ジャンル一覧</h4>
	  <div class="table-responsive">
		  <table class="table col-sm-10 mx-auto">
		    <thead class="thead-light">
				  <tr>
				    <th scope="col">ジャンル名</th>
					  <th scope="col">状態</th>
					  <th scope="col"></th>
				  </tr>
				</thead>
				<tbody>
		      <% @genres.each do |genre| %>
				    <tr>
						  <td><%= genre.name %></td>
						  <td>
						    <% if genre.is_active? %>
								  <p class="text-success">有効</p>
								<% else %>
								  <p class="text-secondary">無効</p>
								<% end %>
						  </td>
						  <td>
						  	<%= link_to edit_company_genre_path(current_company.id, genre), class: "btn btn-outline-success" do %>
						  	  <i class="fa-solid fa-pen-to-square"></i> 編集
						  	<% end %>
						  </td>
					  </tr>
				  <% end %>
				</tbody>
		  </table>
	  </div>
  </div>
  <%= render 'shared/pagination', items: @genres %>
</div>
