<div class="card jumbotron bg-light mx-auto">
	<div class="container">
		<h2 class="text-center">ジャンル管理</h2>
		<div class="mb-3">
		  <h3>ジャンル新規登録</h3>
		  <%= render 'shared/genre_form', genre: @genre, url: company_genres_path(current_company.id, @genre) %>
		</div>
    <div class="mb-3">
			<h3>ジャンル一覧</h3>
			<table class="table">
				<thead>
					<tr>
						<th>ジャンル名</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td><%= genre.name %></td>
							<td>
								<% if genre.is_active? %>
									<p class="text-success">有効</p>
								<% else %>
								  <p class="text-secondary">無効</p>
								<% end %>
							</td>
							<td class="text-center"><%= link_to "編集", edit_company_genre_path(current_company.id, genre), class: "btn btn-success" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
