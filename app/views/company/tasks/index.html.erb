<div class="card jumbotron bg-light mx-auto">
  <h3 class="text-center mb-3">タスク管理</h3>
  <h4 class="col-sm-5 mx-auto mb-3">新規登録</h4>
  <%= render 'shared/task_form', task: @task, url: company_tasks_path(@tasks) %>
  <h4 class="col-sm-10 mx-auto mb-3">タスク一覧</h4>
  <div class="table-responsive">
	  <table class="table col-sm-10 mx-auto">
	    <thead class="thead-light">
		    <tr>
		      <th scope="col">タスク名</th>
			    <th scope="col">タスク内容</th>
			    <th scope="col"></th>
		    </tr>
		  </thead>
		  <tbody>
		    <% @tasks.each do |task| %>
		      <tr>
			      <td><%= task.name %></td>
			      <td><%= task.body %></td>
			      <td>
			        <%= link_to edit_company_task_path(company_id: current_company.id, id: task.id), class: "btn btn-outline-success" do %>
				        <i class="fa-solid fa-pen-to-square"></i> 編集
				      <% end %>
			      </td>
			    </tr>
		    <% end %>
		  </tbody>
	  </table>
  </div>
  <%= render 'shared/pagination', items: @tasks %>
</div>
