<div class="card text-center">
  
	<h2 class="card-title">マイページ</h2>
	<h3>
		登録情報</br>
		<%= link_to "編集する", edit_information_path, class: "btn btn-outline-success btn-sm btn-block" %>
	</h3>
	<table class="table table-bordered">
		<thead>
			<th></th>
			<th></th>
			<th></th>
		</thead>
		<tbody>
			<tr>
				<td>企業ID</td>
				<td><%= @employee.company.id %></td>
			</tr>
		  　<tr>
				<td>企業名</td>
				<td><%= @employee.company.company_name %></td>
			</tr>
			<tr>
				<td>所属</td>
				<td><%= @employee.store.name %>店</td>
			</tr>
		  <tr>
				<td>名前</td>
				<td>(姓) <%= @employee.first_name %></td>
				<td>(名) <%= @employee.last_name %></td>
			</tr>
			<tr>
				<td>フリガナ</td>
				<td>(セイ) <%= @employee.first_name_kana %></td>
				<td>(メイ) <%= @employee.last_name_kana %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td colspan="2"><%= @employee.email %></td>
			</tr>
		</tbody>
	</table>
	<h3>
		<%= link_to "投稿一覧", posts_path, class: "btn btn-outline-primary btn-sm" %>
	</h3>
</div>
<p><%=link_to"お気に入り記事",favorites_employee_path(@employee) %></p>