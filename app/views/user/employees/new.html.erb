<h1>New Employee</h1>

<%= form_with model: @employee, url: employees_path do |form| %>
  <%= form.select :company_id, Company.all.map { |c| [c.name, c.id] } %>
  <%= f.collection_select :store_id, Store.all, :id, :name, :prompt => "--選択して下さい--", class: 'rounded' %>
  <%= form.text_field :name %>
  <%= form.text_field :email %>
  <%= form.password_field :password %>
  <%= form.submit 'Create Employee' %>
<% end %>