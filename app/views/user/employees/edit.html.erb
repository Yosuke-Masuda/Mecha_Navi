<div class="card">
  <blockquote class="blockquote mb-0">
    <div class="container">
      <h1><%= @employee.full_name %>さんの編集</h1>
        <div class"row">
          <%= form_with( model: @employee, url: employee_path(@employee), local: true) do |f| %>
            <table class="table table-bordered">
              <tbody>
                <%= render partial: "shared/employee_table_row", locals: { f: f, employee: @employee } %>
              </tbody>
            </table>
            <%= button_tag type: "submit", class: 'btn btn-outline-success btn-block' do %>
              <i class="fa-solid fa-floppy-disk"></i> 保存する
            <% end %>
          <% end %>
        </div>
    </div>
  </blockquote>
</div>