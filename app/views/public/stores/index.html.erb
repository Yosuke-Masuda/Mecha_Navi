<section class="inner">
	<h2 class="section-ttl">店舗管理</h2>
	<div class="mb3">
		<h3>店舗新規登録</h3>
  	<%= render 'form', store: @store, url: stores_path, submit: '登録' %>
	</div>
	<div class="mb3">
		<h3>店舗一覧</h3>
		<table class="store_info has_border">
			<thead>
				<tr>
					<th>店舗名</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @stores.each do |store| %>
					<tr>
						<td><%= link_to store.name, stores_path(store_id: store.id), class: "underline" %>店</td>
						<td>
							<% if store.is_active? %>
								<span class="text-active">有効</span>
							<% else %>
								<span class="text-invalid">無効</span>
							<% end %>
						</td>
						<td class="text-center"><%= link_to "編集", edit_store_path(store), class: "btn btn-success" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</section>