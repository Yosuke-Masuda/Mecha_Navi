<div class="card jumbotron">
  <div class="row">
    <div class="col-12 mx-auto">
      <p class="mb-5 text-center"><%= image_tag("repair service.png", class: "rounded-circle", style: "width: 200px; height: 200px;") %></p>
      <h4 class="mb-5 text-center">企業ログイン</h4>
      <%= form_with model: @company, url: new_company_session_path, local: true do |f| %>
        <div class="field mb-3">
          <%= f.label :"メールアドレス", class: 'col-4 text-right' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: 'col-4' %>
        </div>
        <div class="field mb-3">
          <%= f.label :"パスワード（６文字以上）", class: "col-4 text-right" %>
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: 'col-4 rounded'%>
        </div>

        <div class="actions">
          <%= f.label :" ", class: 'col-4' %>
          <%= f.submit "ログイン", class: 'btn btn-outline-primary col-4' %>
        </div>
      <% end %>

      <h4 class="mt-5 mb-4 ml-4 col-4 text-center login-color">会員登録がお済みでない方</h4>
      <div class="ml-3 col-4 text-center">
        <p><%= link_to "こちら", new_company_registration_path, class: 'text-decolation' %>から新規登録を行って下さい。</p>
      </div>
    </div>
  </div>
</div>
