<div class="card-body jumbotron">
    <h4 class="mb-3 text-center font-italic"><%= @employee.last_name %><%= @employee.first_name %>さんの会員情報編集</h4>

  <blockquote class="blockquote mb-0">
   <div>
     <%= form_with( model: @employee, url: public_update_employee_path, local: true) do |f| %>
         <table class="table table-bordered">
           <tbody>
             <tr>
               <th>会員ID</th>
               <td><%= @employee.id %></td>
             </tr>
             <tr>
               <th>氏名</th>
               <td><%= f.text_field :last_name, id: "companyEmployeeLastName" %> <%= f.text_field :first_name, id: "companyEmployeeFirstName" %></td>
             </tr>
             <tr>
               <th>フリガナ</th>
               <td><%= f.text_field :last_name_kana, id: "companyEmployeeKanaLastName" %> <%= f.text_field :first_name_kana, id: "companyCompanyKanaFirstName" %></td>
             </tr>
             <tr>
               <th>メールアドレス</th>
               <td><%= f.text_field :email, id: "companyEmployeeEmail" %></td>
             </tr>
             <tr>
               <th>会員ステータス</th>
               <td>
                 <%= f.label :is_active, '有効', value: true %>
                 <%= f.radio_button :is_active, true %>
                 <%= f.label :is_active, '退職', value: false %>
                 <%= f.radio_button :is_active, false %>
               </td>
             </tr>
           </tbody>
         </table>
      <%= f.submit '変更を保存', class: "btn btn-outline-success btn-sm btn-block" %>
      <% end %>
    </div>
    </blockquote>
</div>