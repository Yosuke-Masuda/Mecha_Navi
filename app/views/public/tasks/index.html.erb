<div class="container">
	<h2>タスク管理</h2>
	<div class="row">
		<div class="mb3">
		<h3>タスク新規登録</h3>
  	<%= render 'form', task: @task, url: company_tasks_path(@tasks), submit: '登録' %>
	  </div>
	  <div class="mx-auto">
		  <h3>タスク一覧</h3>
		  <table class="task_info has_border">
			  <thead>
				  <tr>
					  <th>タスク名</th>
					  <th>タスク内容</th>
					  <th></th>
				  </tr>
			  </thead>
			  <tbody>
				  <% @tasks.each do |task| %>
					  <tr>
						  <td><%= task.name %></td>
						  <td><%= task.body %></td>
						  <td class="text-center"><%= link_to "編集", edit_company_task_path(company_id: current_company.id, id: task.id), class: "btn btn-success" %></td>
					  </tr>
				  <% end %>
			  </tbody>
		  </table>
	  </div>
	  <table class="table">
	  	<thead>
	  		<tr>
	  			<th>所属</th>
	  			<th>社員名</th>
	  			<th>ステータス</th>
	  		</tr>
	  	</thead>
	  	<tbody>
	  		<% previous_store_name = nil %>
        <% @company.employees.sort_by { |employee| employee.store.name }.each do |employee| %>
          <% if employee.store.name != previous_store_name %>
            <tr>
              <td><%= employee.store.name %></td>
              <% if employee.is_active == true %>
                <td><%= link_to employee.full_name, company_task_path(company_id: @company.id, id: employee.id), class: 'underline' %></td>
              <% else %>
                <td><%= employee.full_name %></td>
              <% end %>
              <td>
                <% if employee.is_active == true %>
                  <p class="text-success">有効</p>
                <% else %>
                  <p class="text-secondary">退職</p>
                <% end %>
              </td>
            </tr>
            <% previous_store_name = employee.store.name %>
          <% else %>
            <tr>
              <td></td>
              <% if employee.is_active == true %>
                <td><%= link_to employee.full_name, company_task_path(company_id: current_company.id, id: employee.id), class: 'underline' %></td>
              <% else %>
                <td><%= employee.full_name %></td>
              <% end %>
              <td>
                <% if employee.is_active == true %>
                  <p class="text-success">有効</p>
                <% else %>
                  <p class="text-secondary">退職</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
	  	</tbody>
	  </table>
	</div>
</div>
