<div class="card jumbotron bg-light">
  
  <div class="row">
    <h3 class="col-12 col-md-10 mx-auto mb-3">検索結果</h3>
    
    <div class="col-12 col-md-10 mx-auto">
      <% if @posts.any? %>
        <%= render partial: 'shared/post', collection: @posts %>
      <% else %>
        <p>何も見つかりませんでした。</p>
      <% end %>
    </div>
    
  </div>
  
  <div class="mt-3">
    <%= render 'shared/pagination', items: @posts %>
  </div>
  
</div>
