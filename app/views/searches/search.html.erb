<div class="card jumbotron bg-light">
  <div class="row">
    <h3 class="col-12 col-md-10 mx-auto mb-3">検索結果</h3>
    <div class="col-12 col-md-10 mx-auto">
      <% if admin_signed_in? %>
        <%= render partial: 'shared/post', collection: @posts %>
      <% elsif company_signed_in? %>
        <%= render partial: 'shared/post', collection: @posts.select { |post| post.company.employee_ids == current_company.employee_ids } %>
      <% elsif employee_signed_in? %>
        <%= render partial: 'shared/post', collection: @posts.select { |post| post.employee.company_id == current_employee.company_id } %>
      <% end %>
    </div>
  </div>
  <div class="mt-3">
    <%= render 'shared/pagination', items: @posts %>
  </div>
</div>
