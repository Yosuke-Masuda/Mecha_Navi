 <% if post.favorited_by?(current_employee) %>
   <%= link_to post_favorites_path(post), class: 'btn btn-outline-danger btn-sm', method: :delete do %>
   <i class="fa-solid fa-heart" aria-hidden="true" style="color: red;"></i><%= post.favorites.count %>
   <% end %>
<% else %>
  <%= link_to post_favorites_path(post) , class: 'btn btn-outline-danger btn-sm', method: :post do %>
  <i class="fa-regular fa-heart" aria-hidden="true"></i><%= post.favorites.count %>
  <% end %>
<% end %>
