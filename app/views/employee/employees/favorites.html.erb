<div class="card jumbotron">
  <h4 class="mb-3 col-12 col-md-10 mx-auto">お気に入りページ</h4>
  <div class="row">
    <div class="col-md-10 mx-auto">

      <% @favorite_posts.each do |post|%>
        <%= render "shared/post", post: post %>
      <% end %>

      <div class="row mt-3 mb-5">
        <div class="col-md-6 mx-auto">
          <%= link_to mypage_path, class: "btn btn-outline-primary btn-block" do %>
            <i class="fa-solid fa-circle-left"></i> マイページへ
          <% end %>
        </div>
      </div>

    </div>
  </div>
  <%= render partial: 'shared/pagination', locals: { items: @favorite_posts } %>
</div>
