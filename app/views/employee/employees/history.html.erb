<div class="card jumbotron bg-light">
  <h3 class="col-md-10 mx-auto mb-3">自分が投稿した履歴</h3>
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <% @posts.each do |post| %>
        <%= render 'shared/post', post: post %>
      <% end %>

      <div class="row mt-3 mb-5">
        <div class="col-md-6 mx-auto">
          <%= link_to mypage_path, class: "btn btn-outline-primary btn-block" do %>
            <i class="fa-solid fa-circle-left"></i> マイページへ
          <% end %>
        </div>
      </div>

    </div>
  </div>
  <%= render 'shared/pagination', items: @posts %>
</div>