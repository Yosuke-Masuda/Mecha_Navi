<% if post_comment.liked_by?(current_employee) %>
   <%= link_to post_post_comment_likes_path(post_id: @post.id, post_comment_id: post_comment.id), class: 'btn btn-outline-warning mb-3', method: :delete do %>
     <i class="fa-solid fa-thumbs-up" aria-hidden="true" style="color: orange;"></i><%= post_comment.likes.count %> 役に立った
   <% end %>
<% else %>
  <%= link_to post_post_comment_likes_path(post_id: @post.id, post_comment_id: post_comment.id) , class: 'btn btn-outline-warning mb-3', method: :post do %>
    <i class="fa-regular fa-thumbs-up" aria-hidden="true"></i><%= post_comment.likes.count %> 役に立った
  <% end %>
<% end %>
