<div class="card jumbotron bg-light">
  <h3 class="col-md-10 mx-auto mb-3"><%= @employee.full_name %>の投稿履歴</h3>
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <%= render partial: 'shared/post', collection: @posts %>

      <div class="row mt-3 mb-5">
        <div class="col-md-6 mx-auto">
          <%= link_to employees_path, class: "btn btn-outline-primary btn-block" do %>
            <i class="fa-solid fa-circle-left"></i> 戻る
          <% end %>
        </div>
      </div>

    </div>
  </div>
  <%= render partial: 'shared/pagination', locals: { items: @posts } %>
</div>