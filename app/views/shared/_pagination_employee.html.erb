<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <li class="page-item <%= 'disabled' if @employees.current_page == 1 %>">
        <% if @employees.current_page == 1 %>
          <span class="page-link">Previous</span>
        <% else %>
          <%= link_to 'Previous', '/posts?page=' + (@employees.current_page - 1).to_s, class: 'page-link' %>
        <% end %>
      </li>

      <% (1..@employees.total_pages).each do |page| %>
        <li class="page-item <%= 'active' if page == @employees.current_page %>">
          <%= link_to page, url_for(params.permit(:controller, :action).merge({ page: page })), class: 'page-link' %>
        </li>
      <% end %>

      <li class="page-item <%= 'disabled' if @employees.current_page == @employees.total_pages %>">
        <% if @employees.current_page == @employees.total_pages %>
          <span class="page-link">Next</span>
        <% else %>
          <%= link_to 'Next', '/posts?page=' + (@employees.current_page + 1).to_s, class: 'page-link' %>
        <% end %>
      </li>
    </ul>
  </nav>