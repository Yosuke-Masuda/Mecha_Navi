<div class="form-group mx-auto">
  <div class="col-sm-10 mx-auto mb-3">
    <%= f.label :genre_id, "ジャンル選択", class: 'col-form-label' %>
  </div>
  <div class="col-sm-10 mx-auto mb-3">
    <%= f.collection_select :genre_id, @genres, :id, :name, prompt: "--選択して下さい--", class: 'form-control text-center' %>
  </div>
  <div class="col-sm-10 mx-auto mb-3">
    <%= f.label :car_name_id, "車名選択", class: 'col-form-label' %>
  </div>
  <div class="col-sm-10 mx-auto mb-3">
    <%= f.collection_select :car_name_id, @car_names, :id, :name, :prompt => "--選択して下さい--", class: 'form-control text-center' %>
  </div>
  <div class="col-sm-10 mx-auto mb-3">
    <%= f.label :car_name_id, "型式選択", class: 'col-form-label' %>
  </div>
  <div class="col-sm-10 mx-auto mb-3">
    <%= f.collection_select :car_type_id, @car_names, :id, :car_type, :prompt => "--選択して下さい--", class: 'form-control text-center' %>
  </div>
  <div class="col-sm-10 mx-auto mb-3">
    <%= f.label :title, 'タイトル', class: 'col-form-label' %>
  </div>
  <div class="col-sm-10 mx-auto mb-3">
    <%= f.text_field :title, class: 'form-control col-sm-5', placeholder: "タイトル記入" %>
  </div>
  <div class="col-sm-10 mx-auto mb-1">
    <label for="post_images" style="cursor: pointer;">
      <i class="fas fa-image fa-lg"></i>
    </label>
  </div>
  <div class="col-sm-10 mx-auto mb-3">
    <%= f.file_field :images, id: "post_images", multiple: true, accept: "image/jpeg, image/gif, image/png" %>
  </div>
  <div class="col-sm-10 mx-auto mb-1">
    <label for="post_video" style="cursor: pointer;">
      <i class="fas fa-video fa-lg"></i>
    </label>
  </div>
  <div class="col-sm-10 mx-auto mb-3">
    <%= f.file_field :video %>
  </div>
  <div class="col-sm-10 mx-auto mb-3">
    <%= f.label :caption, '説明', class: 'col-form-label' %>
  </div>
  <div class="col-sm-10 mx-auto mb-3">
    <%= f.text_area :caption, class: "form-control" %>
  </div>
</div>