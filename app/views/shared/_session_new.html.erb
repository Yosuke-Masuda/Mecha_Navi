<div class="field mb-3">
  <div class="col-md-4 mx-auto">
    <%= f.label :email, "メールアドレス", class: 'col-form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "sample@example.com" %>
  </div>
</div>
<div class="field mb-3">
  <div class="col-md-4 mx-auto">
    <%= f.label :"パスワード（６文字以上）", class: "col-form-label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', minlength: 6, placeholder: "Password" %>
  </div>
</div>
<div class="actions">
  <div class="col-md-4 mx-auto">
    <%= f.label :" ", class: 'col-form-label' %>
    <%= f.submit "ログイン", class: "btn btn-outline-primary btn-block" %>
  </div>
</div>