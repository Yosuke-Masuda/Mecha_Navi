<div class"card">
  <div class="container">
    <div class"row">
      <h2 class="section-ttl">車名新規登録</h2>
      <div class="form-group">
        <%= form_with(model: @car_name, url: admin_car_name_path(@car_name), local: true) do |f| %>
	      <%= f.label :name, "車名:" %>
	      <%= f.text_field :name %>
	      <%= f.label :car_type, "型式" %>
	      <%= f.text_field :car_type %>
	      <%= f.radio_button :is_active, true %>
	      <%= f.label :is_active, "有効", class: "text-active" %>
	      <%= f.radio_button :is_active, false %>
	      <%= f.label :is_active, "無効", class: "text-invalid" %>
	      <%= f.submit '更新', class: "btn btn-primary ml2" %>
      <% end %>
      </div>
      
    </div>
  </div>
</div>
	