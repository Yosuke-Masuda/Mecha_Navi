<div class="card col-12">
  <blockquote class="blockquote mb-0">
    <div class="container">
      <h2><%= @company.company_name %>の会員情報編集</h2>
          <%= form_with( model: @company, url: admin_company_path, local: true) do |f| %>
            <table class="table table-bordered">
              <tbody>
                <tr>
                  <th>会員ID</th>
                  <td><%= @company.id %></td>
                </tr>
                <tr>
                  <th>会社名</th>
                  <td><%= f.text_field :company_name, class: 'form-control' %></td>
                </tr>
                <tr>
                  <th>フリガナ</th>
                  <td><%= f.text_field :company_name_kana, class: 'form-control' %></td>
                </tr>
                <tr>
                  <th>住所</th>
                  <td><%= f.text_field :address, class: 'form-control' %></td>
                </tr>
                <tr>
                  <th>電話番号</th>
                  <td><%= f.text_field :phone_number, class: 'form-control' %></td>
                </tr>
                <tr>
                  <th>メールアドレス</th>
                  <td><%= f.text_field :email, class: 'form-control' %></td>
                </tr>
                <tr>
                  <th>会員ステータス</th>
                  <td>
                    <%= f.label :is_active, '有効', value: true %>
                    <%= f.radio_button :is_active, true %>
                    <%= f.label :is_active, '無効', value: false %>
                    <%= f.radio_button :is_active, false %>
                  </td>
                </tr>
              </tbody>
            </table>
          <%= f.submit '変更を保存', class: "btn btn-outline-success btn-block" %>
        <% end %>
    </div>
  </blockquote>
</div>