<div class="card jumbotron bg-light">
  <div class="row">
    <div class="col-md-12 mx-auto">
    	<h4 class="col-md-10 mx-auto mb-3"><%= @company.company_name %>の詳細</h4>
			<div class="table-responsive">
		    <table class="table table-bordered col-md-10 mx-auto">
		    	<tbody>
		    		<tr>
				      <td>企業ID</td>
				      <td colspan="2"><%= @company.id %></td>
			      </tr>
			      <tr>
				      <td>会社名</td>
				      <td><%= @company.company_name %></td>
			      </tr>
			      <tr>
				      <td>フリガナ</td>
				      <td><%= @company.company_name_kana %></td>
			      </tr>
				      <td>郵便番号</td>
				      <td colspan="2"><%= @company.postal_code %></td>
			      </tr>
			      <tr>
				      <td>住所</td>
				      <td colspan="2"><%= @company.address %></td>
			      </tr>
			      <tr>
				      <td>電話番号</td>
				      <td colspan="2"><%= @company.phone_number %></td>
			      </tr>
			      <tr>
				      <td>メールアドレス</td>
				      <td colspan="2"><%= @company.email %></td>
				    </tr>
			      <tr>
			      <tr>
				      <td>ステータス</td>
				      <td colspan="2">
					      <% if @company.is_active? %>
					        <p class="text-success">有効</p>
					      <% else %>
					        <p class="text-secondary">無効</p>
					      <% end %>
				      </td>
			      </tr>
		    	</tbody>
		    </table>
	    </div>
	    <div class="row mt-3 mb-5">
	      <div class="col-md-6 mx-auto">
			    <div class="btn-group btn-block">
			      <%= link_to edit_admin_company_path, class: 'btn btn-outline-success' do %>
			        <i class="fa-regular fa-pen-to-square"></i> 編集
			      <% end %>
			      <%= link_to admin_companies_path, class: 'btn btn-outline-primary' do %>
			        <i class="fa-solid fa-building"></i> 企業一覧
			      <% end %>
			    </div>
			  </div>
		  </div>
		</div>
  </div>
</div>