<div class="card jumbotron bg-light">
	<blockquote class="blockquote">
	  <div class="container">
	  	<h2><%= @company.company_name %>の詳細</h2>
	  	<div class="row">
		    <table class="table table-bordered">
		    	<tbody>
		    		<tr>
				      <td>会員ID</td>
				      <td colspan="2"><%= @company.id %></td>
			      </tr>
			      <tr>
				      <td>会社名</td>
				      <td><%= @company.company_name %></td>
			      </tr>
			      <tr>
				      <td>フリガナ</td>
				      <td><%= @company.company_name_kana %></td>
			      </tr>
			      <tr>
				      <td>メールアドレス</td>
				      <td colspan="2"><%= @company.email %></td>
				    </tr>
			      <tr>
				      <td>郵便番号</td>
				      <td colspan="2"><%= @company.postal_code %></td>
			      </tr>
			      <tr>
				      <td>住所</td>
				      <td colspan="2"><%= @company.address %></td>
			      </tr>
			      <tr>
				      <td>電話番号</td>
				      <td colspan="2"><%= @company.phone_number %></td>
			      </tr>
			      <tr>
				      <td>会員ステータス</td>
				      <td colspan="2">
					      <% if @company.is_active? %>
						      <span class="text-active">有効	</span>
					      <% else %>
						      <span class="text-invalid">退会済み</span>
					      <% end %>
				      </td>
			      </tr>
		    	</tbody>
		    </table>
            <div class="btn-group btn-block" role="group" aria-label="Basic example">
				      <%= link_to edit_admin_company_path, class: 'btn btn-outline-success' do %>
				        <i class="fa-regular fa-pen-to-square"></i> 編集
				      <% end %>
				      <%= link_to admin_companies_path, class: 'btn btn-outline-primary' do %>
				        <i class="fa-solid fa-users-viewfinder"></i> 会員一覧
				      <% end %>
				    </div>
		    </div>
	    </div>
	</blockquote>
</div>