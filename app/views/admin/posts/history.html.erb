<div class="card jumbotron bg-white">
  <h4 class="col-md-10 mx-auto mb-3"><%= @employee.full_name %>の投稿履歴</h4>
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <%= render partial: 'shared/post', collection: @posts %>

      <div class="row mt-3 mb-5">
        <div class="col-md-5 mx-auto">
          <div class="btn-group btn-block mt-3">
            <%= link_to admin_company_employee_posts_path(@company.id), class: "btn btn-outline-info" do %>
              <i class="fa-solid fa-building"></i> 企業投稿履歴
            <% end %>
            <%= link_to admin_company_employees_path(@company.id, @employee), class: 'btn btn-outline-primary' do %>
              <i class="fa-solid fa-users"></i> 社員一覧
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
  <%= render 'shared/pagination', items: @posts %>
</div>
