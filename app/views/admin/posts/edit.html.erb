<div class="card jumbotron bg-light">
  <h4 class="mb-5 text-center">投稿編集</h4>
  <%= form_with(model: @post, url: admin_company_employee_post_path(company_id: @post.company_id, employee_id: @post.employee_id, id: @post.id), method: :patch, local: true) do |f| %>
    <%= render 'layouts/error_messages', resource: @post %>
	  <div class="row">
      <div class="col-12 col-lg-10 mx-auto">
        <%= render 'shared/post_form', f: f, user_type: "admin" %>
        <%= render 'shared/post_edit', f: f, post: @post %>
      </div>
    </div>
  <% end %>
</div>
