<div class="container-fluid">
  <div class="card jumbotron bg-light">
    <blockquote>
      <h2 class="col-sm-10 mx-auto mb-3"><%= @store.name %>店の所属社員</h2>
      <div class="row">
        <table class="table col-sm-10 mx-auto">
          <thead class="thead-light">
            <tr>
              <th>所属社員</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @employees.each do |employee| %>
               <tr>
                 <td><%= link_to "#{employee.full_name}", admin_company_employee_path(@company.id, employee.id), class: "text-blue border-bottom border-dark" %></td>
                 <td><%= employee.email %></td>
                 <td>
                   <% if employee.is_active == true %>
                     <p class="text-success">有効</p>
                   <% else %>
                     <p class="text-secondary">退職</p>
                   <% end %>
                 </td>
               </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to admin_stores_path, class: 'btn btn-outline-primary col-sm-10 mx-auto mb-3' do %>
          <i class="fa-solid fa-shop"></i> 店舗一覧</a>
        <% end %>
      </div>
    </blockquote>
    <%= render partial: 'shared/pagination', locals: { items: @employees } %>
  </div>
</div>