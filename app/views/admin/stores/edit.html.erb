<div class="card">
  <div class="container">
	  <h2 class="section-ttl">店舗編集</h2>
    <%= form_with(model: @store, url: admin_store_path(@store), local: true) do |f| %>
	    <%= render 'layouts/error_messages', resource: @store %>
	     <div class="form-group row mx-auto">
	      <%= f.label :name, "　店舗名：", class: "col-form-label" %>
	      <%= f.text_field :name, class: 'form-control col-md-3' %>
	      <div class="form-check form-check-inline mx-auto">
	        <%= f.radio_button :is_active, true %>
	        <%= f.label :is_active, "有効", class: "text-active" %>
	        <%= f.radio_button :is_active, false %>
	        <%= f.label :is_active, "無効", class: "text-invalid" %>
	        <%= f.submit '更新', class: "btn btn-outline-success" %>
	      </div>
	    </div>
    <% end %>
  </div>
</div>