<div class="card jumbotron bg-light">
  <h4 class="mb-5 text-color text-center"><%= @employee.full_name %>さんの編集</h4>
  
  <div class"row">
    <%= form_with( model: @employee, url: admin_company_employee_path(company_id: @employee.company_id, id: @employee.id), local: true) do |f| %>
      <%= render 'layouts/error_messages', resource: @employee %>
      <%= render "shared/employee_form", f: f, employee: @employee, user_type: "admin" %>

      <div class="form-group">
        <div class="row">
          <div class="col-md-4 d-flex align-items-center justify-content-start justify-content-md-end">
            <%= f.label :is_active, "ステータス", class: 'col-form-label' %>
          </div>
          <div class="col-md-8">
            <%= f.label :is_active, '有効', value: true %>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, '退職', value: false %>
            <%= f.radio_button :is_active, false %>
          </div>
        </div>
      </div>

      <div class="row mt-3 mb-5">
        <div class="col-md-6 mx-auto">
          <div class="btn-group btn-block" role="group" aria-label="Basic example">
            <div class="btn-group btn-block" role="group" aria-label="Basic example">
              <%= button_tag type: "submit", class: 'btn btn-outline-success' do %>
                <i class="fa-solid fa-floppy-disk"></i> 保存
              <% end %>
              <%= link_to admin_company_employee_path(id: @employee.id, company_id: @employee.company_id), class: "btn btn-outline-primary" do %>
                  <i class="fa-solid fa-circle-left"></i> 戻る
              <% end %>
            </div>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>